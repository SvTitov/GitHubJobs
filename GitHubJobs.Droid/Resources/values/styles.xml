<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogFragmentStyle" parent="Base.Theme.AppCompat.Light.Dialog">
      <item name="android:windowAnimationStyle">@style/DialogFragmentAnimation</item>
    </style>

    <style name="DialogFragmentAnimation">
      <item name="android:windowEnterAnimation">@anim/slide_from_top</item>
      <item name="android:windowExitAnimation">@anim/slide_to_top</item>
    </style>


</resources>
